<div class="flex-row-center">
	<%= image_tag "location", height: "40px", width: "40px", id: "location-image" %>
	<p class="rubik-thin", id="location-text">
		<%= image_tag "load-bar", height: "25px", width: "auto" %>
	</p>
</div>
<main class="flex-row-center card-holder">
	<div class="bar-card">
		<p class="rubik-thin flex-row-center", id="dc-name"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-address"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-hours"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-hh_hours"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-message"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-deals1"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-deals2"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-deals3"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-deals4"></br></p>
		<p class="rubik-thin flex-row-center", id="dc-deals5"></br></p>
		<div class="flex-row-center", id="horizontal-line"></div>
		<div class="flex-row-center", id="button-box">
			<div class="click-box", id="dislike">
				<input type="image" src="assets/negative.svg", height="100px", width="100px", class="card-buttons" />
			</div>
			<div id="vertical-line"></div>
			<div class="click-box", id="like">
				<input type="image" src="assets/positive.svg", height="100px", width="100px", class="card-buttons" />
			</div>
		</div>
	</div>
	<div class="bar-card-after"></div>
</main>

<%= javascript_include_tag 'deals' %>
